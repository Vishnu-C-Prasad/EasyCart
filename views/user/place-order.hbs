<section>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8">
                <div class="card" style="width: 18rem;" id="checkout-details">
                    <div class="card-header bg-primary">
                        <h5 class="text-white">Delivery Details</h5>
                    </div>
                    <form id="checkout-form" class="p-2 small" style="height: 75vh;">
                        <div class="row my-3">
                            <div class="col">
                                <label for="">Name</label>
                                <input type="text" id="name" class="form-control form-control-sm" name="name">
                            </div>
                            <div class="col">
                                <label for="">Mobile number</label>
                                <input type="text" id="mobile" class="form-control form-control-sm" name="mobile">
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="">Pincode</label>
                                <input type="text" id="pincode" class="form-control form-control-sm" name="pincode">
                            </div>
                            <div class="col">
                                <label for="">Locality</label>
                                <input type="text" id="locality" class="form-control form-control-sm" name="locality">
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="">Address (Area and Street)</label>
                                <input type="text" id="address" name="address" style="width: 100%; height: 2rem;">
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="">City/District/Town</label>
                                <input type="text" id="city" class="form-control form-control-sm" name="city">
                            </div>
                            <div class="col">
                                <label for="">State</label>
                                <input type="text" id="state" class="form-control form-control-sm" name="state">
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <label for="">Landmark (Optional)</label>
                                <input type="text" id="landmark" class="form-control form-control-sm" name="landmark">
                            </div>
                            <div class="col">
                                <label for="">Alternate Phone (Optional)</label>
                                <input type="text" id="altPhone" class="form-control form-control-sm" name="altPhone">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pl-5 my-auto">
                                <h6>Select Payment Method</h6>
                                <div class="form-group form-radio">
                                    <input type="radio" class="form-radio-input" id="Cod" name="paymentMethod"
                                        value="COD" checked>
                                    <label class="form-radio-label" for="Cod">Cash on Delivery (COD)</label>
                                </div>
                                <div class="form-group form-radio">
                                    <input type="radio" class="form-radio-input" id="Online-payment"
                                        name="paymentMethod" value="onlinepayment">
                                    <label class="form-radio-label" for="Online-payment">Online payment</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body pb-0">
                                        <h6 class="text-secondary border-bottom pb-3">PRICE DETAILS</h6>
                                        <div class="row p-3">
                                            <h6>Total Amount</h6>
                                            <h6 class="ml-auto"><span
                                                    style="font-family: Roboto,Arial,sans-serif;">â‚¹</span>
                                                <span id="total-amount">{{totalAmount}}</span>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center p-2">
                            <button type="submit" class="btn btn-primary btn-lg px-5">Checkout</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="width: 18rem;" id="addresses-list">
                    <div class="card-header bg-primary">
                        <h5 class="text-white">Delivery Addresses</h5>
                    </div>
                    <form id="addresses-form" class="small">
                        <div class="card-body">
                            {{#each user.addresses}}
                            <div class="border">
                                <div class="p-4">
                                    <div class="row">
                                        <div class="col-1 text-center my-auto">
                                            <input type="radio" class="form-radio-input" name="address" onchange="setAddress({
                                                    name: '{{this.name}}',
                                                    mobile: '{{this.mobile}}',
                                                    pincode: '{{this.pincode}}',
                                                    locality: '{{this.locality}}',
                                                    address: '{{this.address}}',
                                                    city: '{{this.city}}',
                                                    state: '{{this.state}}',
                                                    landmark: '{{this.landmark}}',
                                                    altPhone: '{{this.altPhone}}'
                                                    })">
                                        </div>
                                        <div class="col-10">
                                            <h6>{{this.name}} &nbsp;&nbsp; {{this.mobile}}</h6>
                                            <p class="m-0">{{this.address}}, {{this.locality}}, {{this.landmark}},
                                                {{this.city}}, {{this.state}} - <span
                                                    class="font-weight-bold">{{this.pincode}}</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>