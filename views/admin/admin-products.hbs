<section>
    <div class="container">
        <div class="container">
            <div class="row mt-3">
                <div class="col-md-8">
                    <div class="row">
                        {{#if alertMessage}}
                        <div class="alert alert-primary alert-dismissible fade show" role="alert" id="manage-alert">
                            <strong class="text-success" id="manage-alert-body">{{alertMessage}}</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row mb-3">
                        <a href="/admin/add-product" class="btn btn-primary ml-auto">Add Product</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-responsive-sm table-hover mt-3" id="data-table">
            <thead class="bg-primary text-light">
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="bg-white">
                {{#each products}}
                <tr>
                    <td class="align-middle"><img src="/images/product-images/{{this._id}}.jpg" alt=""
                            class="img-fluid img-thumbnail table-img">
                        <h6>{{this.name}}</h6>
                    </td>
                    <td class="align-middle">{{this.category}}</td>
                    <td class="align-middle">{{this.description}}</td>
                    <td class="align-middle">Rs.{{this.price}}</td>
                    <td class="align-middle" style="width: 15%;">
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm my-1"
                            style="width: 100%;">Edit</a>
                        <br>

                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm my-1"
                            style="width: 100%;"
                            onclick="return confirm('Are you want to delete {{this.name}} ?');">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>