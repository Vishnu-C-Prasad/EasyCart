<div>
    {{>user-carousel}}
</div>
<section>
    <div class="container mt-4">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 col-6">
                <div class="card card-animated mb-4" style="width: 18rem;">
                    <img src="/images/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body product-card-body">
                        <div class="row">
                            <div class="col-10">
                                <h5 class="card-title">{{this.name}}</h5>
                            </div>
                            <div class="col-2 p-0 m-0">
                                <a type="button" onclick="addToWishList(event, '{{this._id}}');" class="text-danger text-decoration-none card-animated-lg rounded-circle mb-2 mr-2">
                                    <svg width="1.4em" height="1.4em" viewBox="0 0 16 16"
                                        class="bi bi-heart-fill" fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <div class="card-header bg-light text-center">
                        <h5>From â‚¹{{this.price}}</h5>
                        <a role="button" onclick="addToCart(event, '{{this._id}}')"
                            class="btn btn-primary rounded-pill">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>