<section>
    <div class="container">
        <div class="container">
            <div class="row mt-3">
                <div class="col-md-8">
                    <div class="row">
                        {{#if toastMessage}}
                        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="10000">
                            <div class="toast-header">
                                <strong class="mr-auto text-primary">EasyCart</strong>
                                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="toast-body text-danger">
                                {{toastMessage}}
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <a href="/admin/add-slide" class="btn btn-primary ml-auto mr-1">Add to Slide</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-responsive-sm mt-3">
            <thead class="bg-primary text-light">
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each carouselItems}}
                <tr>
                    <td>{{this.name}}</td>
                    <td><img src="/images/slide-images/{{this._id}}.jpg" alt=""
                            class="img-fluid img-thumbnail table-img"></td>
                    <td>{{this.description}}</td>
                    <td>Rs.{{this.price}}</td>
                    <td class="text-center">
                        <a href="/admin/edit-slide/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-slide/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>