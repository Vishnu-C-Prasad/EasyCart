<section>
    <div class="container mt-3">
        <table class="table table-responsive-sm mt-3">
            <thead class="bg-primary text-light">
                <tr>
                    <th scope="col" hidden>ID</th>
                    <th scope="col">Product</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            {{#each products}}
            <form action="/admin/delete-product" method="POST" enctype="multipart/form-data">
                <tbody>
                    <tr>
                        <td hidden>
                            <input type="text" value="{{this._id}}" name="_id" readonly class="form-control">
                        </td>
                        <td>
                            <div class="form-group">
                                <img src="/images/product-images/{{this._id}}.jpg" alt=""
                                    class="img-fluid img-thumbnail table-img">
                            </div>
                            <h6>{{this.name}}</h6>
                        </td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td class="pr-0 row mr-2">
                            <button type="submit" class="btn btn-primary ml-auto">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </form>
            {{/each}}
        </table>
    </div>
</section>