                            {{else}}
                            Account
                            {{/if}}
                        </a>
                        <div class="dropdown-menu p-0 mt-2" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item border-bottom p-2" href="/my-profile/">
                                <div class="row m-0">
                                    <span class="mx-2">
                                        <svg width="1.2em" height="1.2em" viewBox="0 0 16 16"
                                            class="bi bi-person-circle text-primary" fill="currentColor"
                                            xmlns="http://www.w3.org/2000/svg">
